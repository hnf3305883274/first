.comment-container {
    display: flex;
    flex-direction: column;
    /*margin: 20rpx;*/
}

.comment-title {
    display: flex;
    margin: auto 0;
    padding: 30rpx 20rpx;
    border-bottom: 2rpx #ccc solid;
    font-size: 32rpx;
    color: #333;
}

.item-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    padding: 20rpx 0;
    border-bottom: 2rpx #eee solid;
}

.item-user {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: space-around;
}

.user-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: space-around;
    margin: auto 0;
}

.user-image {
    display: flex;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin: auto 30rpx;
}

.user-info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin: auto;
}

.user-name {
    font-size: 26rpx;
    color: #000;
    margin-bottom: 10rpx;
}

.comment-time {
    font-size: 24rpx;
    color: #888;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-right: 10rpx;
}

.comment-content {
    margin: 20rpx 0 0 140rpx;
    display: flex;
    align-items: flex-start;
    font-size: 28rpx;
    color: #000;
}

.no-result {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #888;
    margin: 30rpx auto;
}