.image-box {
    padding: 30rpx 0 30rpx 30rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    border-bottom: solid 1rpx #eee;
}

.preview-image {
    margin: 0 18rpx 12rpx 0rpx;
    display: flex;
    flex-direction: row;
    align-content: flex-end;
    justify-content: flex-end;
}

.preview-image image {
    width: 220rpx;
    height: 220rpx;
}

.icon {
    position: absolute;
    display: flex;
    padding: 10rpx 8rpx 0 0;
}

.select-image {
    display: flex;
    flex-direction: column;
    width: 218rpx;
    height: 218rpx;
    border: #ddd 1rpx solid;
    justify-content: space-around;
    align-items: center;
    background-color: #f3f3f3;
    margin: 0 18rpx 12rpx 0;
}

.select-image image {
    display: flex;
    width: 120rpx;
    height: 120rpx;
}

.select-title {
    font-size: 26rpx;
    color: #aaa;
    padding: 0 0 10rpx 0;
}