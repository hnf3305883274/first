.article-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: #fff;
    margin: 0 0 40rpx 0;
}

.author-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 120rpx;
    margin: 10rpx 0 10rpx 0;
}

.author-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: auto 60rpx auto 20rpx;
}

.author-other {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.time {
    display: flex;
    font-size: 26rpx;
    color: #777;
    margin: auto 0;
    letter-spacing: 1rpx;
}

.author-detail {
    display: flex;
    flex-direction: row;
    /*justify-content: space-around;*/
    align-items: center;
    /*margin: auto;*/
    padding: 0 0 15rpx 0;
}

.author-image {
    display: flex;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 30rpx 0 0;
}

.author-name {
    display: flex;
    font-size: 30rpx;
    margin: 0 30rpx 0 0;
}

.author-sex {
    display: flex;
    width: 30rpx;
    height: 30rpx;
}

.follow-container {
    display: flex;
    width: 80rpx;
    height: 40rpx;
    align-items: center;
    justify-content: center;
    margin: auto 20rpx auto auto;
    background-color: #6d70d3;
    color: #fff;
    padding: 10rpx 20rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
}

.followed-container {
    display: flex;
    width: 100rpx;
    height: 40rpx;
    align-items: center;
    justify-content: center;
    margin: auto 20rpx auto auto;
    background-color: #bbb;
    color: #fff;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
}

.title-container {
    display: flex;
    margin: 0rpx 0rpx 20rpx 20rpx;
    font-size: 36rpx;
    color: #111;
}

.content-container {
    display: flex;
    margin: 20rpx;
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    line-height: 45rpx;
}

