    margin: 0 0 30rpx 0;
    position: relative;
    width: auto;
    height: 0;
    padding-bottom: 56.25%;
    background: #f3f3f3;
    border-bottom: 1rpx #ddd solid;
}

.video-item {
    /* display: flex;
    width: 100%;
    height: 565rpx;*/
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    align-items: center;
}

.vote-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx;
    border-top: 1rpx #ccc solid;
    border-bottom: 1rpx #ccc solid;
}

.vote-user {
    display: flex;
    align-items: center;
}

.vote-user image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin: 0 30rpx 0 0;
}

.vote-image {
    display: flex;
    flex-direction: row;
}

.vote-count {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #fff;
    background-color: #6d70d3;
    border-radius: 10rpx;
    height: 50rpx;
    padding: 0 20rpx;
    margin: auto 0;
}

.post-container {
    height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 100%;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 20rpx;
    justify-content: space-between;
}

.post-fake {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 60rpx;
    width: 75%;
    border-radius: 10px;
    border: 1px solid #eee;
    background-color: #eee;
    color: #999;
    font-size: 24rpx;
    letter-spacing: 2rpx;
    padding-left: 20rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: auto;
}

.posting-container {
    bottom: 0;
    position: fixed;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    width: 100%;
    z-index: 999;
    height: 100rpx;
}

.post {
    width: 75%;
    margin: 20rpx;
    background-color: #f5f5f5;
    border-radius: 10px;
    padding-left: 25rpx;
    font-size: 26rpx;
    height: 60rpx;
}

.submit {
    margin: auto;
    width: 12%;
    height: 60rpx;
    background-color: #6d70d3;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
    transition-duration: 0.3s;
    font-size: 26rpx;
}

.submit-on {
    background-color: #4d51d2;
}

.comment-container {
    margin: 0 0 50rpx 0;
    padding-bottom: 50rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.no-result {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #888;
    margin: 30rpx auto;
}